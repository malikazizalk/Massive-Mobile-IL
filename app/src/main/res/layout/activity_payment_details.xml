<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/groupStylePrimary"
    tools:context=".PaymentDetails">





    <LinearLayout
        android:id="@+id/linearLayout2"
        style="@style/groupStylePrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/primary"
            android:orientation="horizontal">

            <!--arrow back-->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/primary"
                android:drawableTop="@drawable/arrow_back_white"
                android:gravity="center"
                app:cornerRadius="5dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/teacher_name"
            style="@style/txtPoppinsextrabold15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="22dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="22dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/msg_puspita_sari_de" />

        <TextView
            android:id="@+id/mapel"
            style="@style/txtPoppinslight13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="22dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/msg_teknologi_infor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="25dp"
            android:gravity="center">
            <!-- icon -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_lesson_white"
                tools:ignore="ContentDescription" />
            <!-- session -->
            <TextView
                android:id="@+id/much_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="8"
                android:textColor="#f2f4fb"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text=" Session/Mo"
                android:textColor="#f2f4fb"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Rp.180.000"
                android:textColor="#f2f4fb"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/white_clean"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/current_date"
                    style="@style/txtPoppinslight13_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="33dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_3_desember_2023"
                    tools:text="@string/lbl_3_desember_2023" />

                <LinearLayout
                    style="@style/groupStylecornerRadius_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="@string/lbl_payment_options"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="@string/lbl_payment_options" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginBottom="1dp"
                        android:gravity="start"
                        android:singleLine="true"
                        android:text="@string/lbl_bank_transfer"
                        tools:text="@string/lbl_bank_transfer" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="25dp"
                        android:paddingStart="2dp"
                        android:src="@drawable/arrow_next"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtLanguage"
                    style="@style/txtPoppinslight10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="33dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/msg_make_transfer_t"
                    tools:text="@string/msg_make_transfer_t" />

                <LinearLayout
                    android:id="@+id/linearRowaccountnumber"
                    style="@style/groupStylegray_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="18dp"
                    android:baselineAligned="false"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_weight="0.79"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            style="@style/txtPoppinslight10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_account_number"
                            android:textStyle="bold"
                            tools:text="@string/lbl_account_number" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/bank_account"
                                style="@style/txtPoppinssemibold12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@string/lbl_2520231298"
                                tools:text="@string/lbl_2520231298" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="13dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginEnd="1dp"
                                android:layout_marginBottom="1dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/icon_copy"
                                tools:ignore="ContentDescription"
                                tools:src="@drawable/icon_copy" />
                        </LinearLayout>

                        <TextView
                            style="@style/txtPoppinslight10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="10dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_account_name"
                            tools:text="@string/lbl_account_name" />

                        <TextView
                            android:id="@+id/account_name"
                            style="@style/txtPoppinssemibold12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="10dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_logicliberators"
                            tools:text="@string/lbl_logicliberators" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="67dp"
                        android:layout_weight="0.21"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            style="@style/txtPoppinslight10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:singleLine="true"
                            android:text="@string/lbl_bank_name"
                            tools:text="@string/lbl_bank_name" />

                        <TextView
                            android:id="@+id/bank_name"
                            style="@style/txtPoppinssemibold12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:singleLine="true"
                            android:text="@string/lbl_bri_bank"
                            tools:text="@string/lbl_bri_bank" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/groupStylegray_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="17dp"
                            android:text="@string/subtotal" />

                        <TextView
                            android:id="@+id/subtotal_pay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp"
                            android:layout_marginEnd="25dp"
                            android:gravity="end"
                            android:text="Rp.200.000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="15dp"
                            android:text="Service Fee" />

                        <TextView
                            android:id="@+id/service_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="25dp"
                            android:gravity="end"
                            android:text="Rp.2.500" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="15dp"
                            android:text="@string/total_payment"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/total_pay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="25dp"
                            android:gravity="end"
                            android:text="Rp.202.500"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearRowionalertcircl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:paddingStart="100dp"
                    android:paddingEnd="80dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/imageIonalertcircl"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_alert_cycle"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/icon_alert_cycle" />

                    <TextView
                        style="@style/txtPoppinsmedium10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="0.94"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/msg_alrt"
                        tools:text="@string/msg_alrt" />
                </LinearLayout>

                <Button
                    android:id="@+id/simpan"
                    android:layout_width="320dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="167dp"
                    android:background="@drawable/button"
                    android:text="@string/confirm" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_clean"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>
