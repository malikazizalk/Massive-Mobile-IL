<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".chat">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="367dp"
        android:layout_marginBottom="675dp"
        app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:layout_above="@+id/card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/foto_profil" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Sri Irawati"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Bergabung sejak 31 November 2023"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="28dp"
        android:layout_marginBottom="-20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:textAlignment="textEnd">


            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/secondary"
                android:drawablePadding="15dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur vitae quam venenatis"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/secondary"
                android:drawablePadding="15dp"
                android:ems="10"
                android:padding="10dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipig elit."
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/secondary"
                android:hint="Belum di baca"
                android:textAlignment="center"
                android:textStyle="bold"
                android:drawablePadding="15dp"
                android:ems="10"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text"
                    android:backgroundTint="@color/secondary"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Tulis pesan"
                    android:padding="10dp"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text"
                    android:drawableRight="@drawable/baseline_call_24"
                    android:backgroundTint="@color/white" />



            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>